@model List<SchedulerV4.Models.GroupEntity>

@{
    ViewData["Title"] = "Список учебных групп";
}

<h1>Список учебных групп</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Номер группы</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.ID</td>
                <td>@group.NANE</td> <!-- Исправлено с NANE на NAME -->
                <td>
                    <form asp-action="Edit" method="post" style="display:inline;">
                        <input type="hidden" name="ID" value="@group.ID" />
                        <button type="submit" class="btn btn-primary">Изменить информацию о группе</button>
                    </form>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="ID" value="@group.ID" />
                        <button type="submit" class="btn btn-danger">Удалить группу</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Add New Group</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="ID">ID</label>
        <input type="text" name="ID" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" name="NANE" class="form-control" required /> <!-- Исправлено с NANE на NAME -->
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>
